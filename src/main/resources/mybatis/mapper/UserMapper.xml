<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.education.study.model.mapper.UserMapper">

    <resultMap type="User" id="userResult">
        <result column="user_name" property="userName"/>
        <result column="user_email" property="userEmail"/>
        <result column="user_phone" property="userPhone"/>
        <result column="user_password" property="userPwd"/>
        <result column="user_nickname" property="userNickName"/>
        <result column="user_gender" property="userGender"/>
        <result column="user_birth" property="userBirth"/>
        <result column="user_no" property="userNo"/>
    </resultMap>

    <insert id="createUser" useGeneratedKeys="true" keyProperty="user_no" parameterType="User">
        insert
        into User
        values
            (#{userName}, #{userEmail}, #{userPhone}, #{userPwd}, #{userNickName}, #{userGender}, #{userBirth}, #{userNo} )
    </insert>

    <select id="allUsers" resultMap="userResult">
        select *
        from User
    </select>

    <select id="userByNo" resultMap="userResult">
        select *
          from User
         where user_no = #{userNo}
    </select>
</mapper>